{
  "name": "gotrack-pixel",
  "version": "0.1.0",
  "description": "Client-side tracking pixel library for GoTrack (fraud/bot defense)",
  "author": "Steven Horton",
  "license": "MIT",
  "type": "module",
  "main": "dist/pixel.umd.js",
  "module": "dist/pixel.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "e2e": "playwright test"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.56.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
